platform :ios, '9.0'

target 'Tinder' do
  use_frameworks!
  # 网络请求
  pod 'Alamofire'
  # Json解析
  pod 'SwiftyJSON'
  # Json转Model
  pod 'EVReflection'
  # 图片加载
  pod 'Kingfisher'
  pod 'SDWebImage'
  # 自动布局
  pod 'SnapKit'
  # 上拉加载
  pod 'MJRefresh'
  # 自适应
  pod 'UITableView+FDTemplateLayoutCell'
  # 复用
  pod 'Reusable'
  # HUD
  pod 'MBProgressHUD'
  #图片选择
  pod 'TZImagePickerController'
  # 滑动手势
  pod 'FDFullscreenPopGesture'
  #图片浏览
  pod 'YBImageBrowser'
  # 多页面嵌套
  pod 'JXCategoryView'
  pod 'JXPagingView/Paging'
  # 视频播放
  pod 'ZFPlayer'
  pod 'ZFPlayer/ControlView'
  pod 'ZFPlayer/AVPlayer'
  # HTTP Server
  pod 'GCDWebServer'
  pod 'GCDWebServer/WebUploader'
  # 文件操作
  pod 'FileKit'
  # 局域网IP扫描
  pod 'MMLanScan'
  # iCloud
  pod 'iCloudDocumentSync'
  # 下载
  pod 'Tiercel'
	# 二维码
  pod 'EFQRCode'
  # 进度
  pod 'UICircularProgressRing'
  # tableView 删除
  pod 'SwipeCellKit'
end
